function ProxCampo: String;
var 
  P: Integer;
  C: Char;
begin
  if S='' then begin
    Result := '';
    Exit;
  end;
  
  if S[1]='"' then begin
    Delete(S, 1, 1);
    C := '"';
  end else 
    C := ';';
  
  P := Pos(C, S);
  if P>0 then begin
    Result := Trim(Copy(S, 1, P-1));
    Delete(S, 1, P);
  end else begin
    Result := Trim(S);
    S := '';
  end;
  S := Trim(S);
  if (C='"') and (S>'') and (S[1]=';') then Delete(S, 1, 1);

  for P := Length(Result) downto 1 do 
    if Result[P]='"' then Delete(Result, P, 1);
  Result := Trim(MeuTrim(Result));
end;

procedure proxn(n: Integer);
begin
  while n>0 do begin
    ProxCampo;
    dec(n);
  end;
end;

procedure AddDescr(D: String);
begin
  if Trim(D)='' then Exit;
  tProdDescricao.Value := tProdDescricao.Value + ' ' + D;
end;

function FindID(aTam: String): Integer;
var saux: string;
begin
  if sRef='6320' then begin
    sAux := '1111' + sRef;
    if sAux='123123123123123123' then Exit;
  end;
    
  tProd.SetRange([sRef], [sRef]);
  tProd.First;
  while not tProd.Eof do begin
    if Pos(aTam, tProdDescricao.Value)>0 then begin
      Result := tProdID.Value;
      Exit;
    end;
    tProd.Next;
  end;
  Result := 0;
end;

procedure AddProduto(aEstoque: Integer; aTam: String);
var aID: Integer;
begin
  aID := FindID('Tam.'+aTam);

  if aID=0 then Exit;

  tEst.SetRange([aID], [aID]);

  tEst.First;

  if tEstCaixa.IsNull or (tEstDataHora.Value = EncodeDate(2013, 1, 1)) then begin
    tEst.Edit;
    tEstQuant.Value := aEstoque;
    tEstCaixa.Value := 1;
    tEstDataHora.Value := EncodeDate(2013, 1, 1);
    tEst.Post;
  end else begin
    if aEstoque=0 then Exit;
    tEst.Append;
    tEstQuant.Value := aEstoque;
    tEstCaixa.Value := 1;
    tEstDataHora.Value := EncodeDate(2013, 1, 1);
    tEstEntrada.Value := True;
    tEstTipoTran.Value := trEstEntrada;
    tEst.Post;
  end;
  

  

  tEst.Next;
  while (not tEst.Eof) do begin
    if (tEstTipoTran.Value in [trEstSaida, trEstEntrada]) and (tEstDataHora.Value<>EncodeDate(2013, 1, 1)) then
      tEst.Delete else
      tEst.Next;
  end;
end;

begin
